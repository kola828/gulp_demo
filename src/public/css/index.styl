*
  margin 0
  padding 0
html,body
  width 100%
  height 100%
  position relative
  font-family "微软雅黑", Helvetica, sans-serif
//防止闪烁
[v-cloak]{ display: none;}
#index
  height 100%
  background url("../images/bg.jpg")
  color white
  background-size 100% 100%
  .text-center
    text-align center
    padding-top 15px
  form
    margin 10px
    .form-group
      margin: 13px 0;
      text-align: center;
      height: 2rem;
      label
        width 22%
        display inline-block
        text-align right
      .form-control
        height: 1.5rem;
        padding-left: 5px;
        border-radius: 4px;
        border: 1px solid #d3d3d3;
        width: 75%;
        float: right;
      .btn
        height 1.7rem
        line-height 1.7rem
        width 4rem
        border-radius 4px
        background-color #169ad4
        border 1px solid #169ad4
        color #ffffff
      .btn + .btn
        margin-left 10px
  .text-info
    text-align center
    padding-top 15px
  table
    border 1px solid #ddd
    margin 10px auto
  table
    border-right none
    thead
      tr
        th
          padding 5px 0
          width 4.5rem
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
    tbody
      tr
        td
          width 4.5rem
          padding 5px 0
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
          .btn
            padding 3px 5px
            border-radius 3px
            background-color #169ad4
            border 1px solid #169ad4
            color #ffffff
        .last
          border-bottom none
  .text-muted
    border-bottom none