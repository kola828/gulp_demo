
#index
  height 100%
  background url("../images/bg.jpg")
  color white
  background-size 100% 100%
  .text-center
    text-align center
    padding-top 15px
    font-size 20px
  form
    width: 500px;
    margin: 0 auto;
    .form-group
      margin: 13px 0;
      height: 40px;
      label
        width: 65px;
        display: inline-block;
        text-align: right;
      .form-control
        height: 30px;
        padding-left: 5px;
        border-radius: 4px;
        border: 1px solid #d3d3d3;
        width: 400px;
        color: #000;
      .input-group
        display inline-block
      select
        color black
      .btn
        height 30px
        line-height 30px
        width 70px
        border-radius 4px
        background-color #169ad4
        border 1px solid #169ad4
        color #ffffff
      .btn + .btn
        margin-left 10px
    .btn-group
      text-align center
  .text-info
    text-align center
    padding-top 15px
    font-size 18px
  table
    border 1px solid #ddd
    margin 10px auto
  table
    border-right none
    font-size 14px
    width 920px
    thead
      tr
        th
          padding 5px 0
          width 131px
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
          font-size 14px
    tbody
      tr
        td
          width 131px
          padding 5px 0
          font-size 14px
          border-right 1px solid lightgrey
          border-bottom 1px solid lightgrey
          .btn
            padding 3px 5px
            border-radius 3px
            background-color #169ad4
            border 1px solid #169ad4
            color #ffffff
          .btn-sm
            margin-left 10px
        .last
          border-bottom none
          font-size 14px
  .text-muted
    border-bottom none